# ==============================================================================
# MoneyLife — Environment Variables
# Copy to .env and fill in values
# ==============================================================================

# ── Core ─────────────────────────────────────────────────────────────────────
DATABASE_URL=postgres://moneylife:localdev123@localhost:5432/moneylife
REDIS_URL=redis://localhost:6379
ENCRYPTION_KEY=change-me-to-a-random-256-bit-key

# ── Auth ─────────────────────────────────────────────────────────────────────
JWT_SECRET=local-dev-secret-do-not-use-in-prod
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
BCRYPT_ROUNDS=12

# ── OAuth / Social Auth ─────────────────────────────────────────────────────
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY=

# ── AWS / LocalStack ────────────────────────────────────────────────────────
SQS_ENDPOINT=http://localhost:4566
SNS_ENDPOINT=http://localhost:4566
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# ── Banking Integrations ────────────────────────────────────────────────────
PLAID_CLIENT_ID=
PLAID_SECRET=
PLAID_ENV=sandbox

TRUELAYER_CLIENT_ID=
TRUELAYER_CLIENT_SECRET=
TRUELAYER_ENV=sandbox

SALT_EDGE_APP_ID=
SALT_EDGE_SECRET=

# ── Notifications ────────────────────────────────────────────────────────────
FCM_SERVICE_ACCOUNT=
SENDGRID_API_KEY=

# ── Rewards / Fulfillment ───────────────────────────────────────────────────
TREMENDOUS_API_KEY=
TREMENDOUS_ENV=sandbox

# ── Partner ──────────────────────────────────────────────────────────────────
PARTNER_WEBHOOK_SECRET=

# ── Observability ────────────────────────────────────────────────────────────
SENTRY_DSN=
LOG_LEVEL=debug

# ── Rate Limiting ────────────────────────────────────────────────────────────
CORS_ORIGINS=*
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# ── Docker (prod) ────────────────────────────────────────────────────────────
DOCKER_REGISTRY=ghcr.io/andupetcu/moneylife
IMAGE_TAG=latest
